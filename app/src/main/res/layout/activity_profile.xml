<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C2C2C"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        layout="@layout/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />
    <!-- Profile Content -->
    <ScrollView
        android:id="@+id/profile_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- User Profile Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="16dp">

                <ImageView
                    android:id="@+id/profile_picture"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/logo"
                    android:contentDescription="User Profile Picture" />

                <TextView
                    android:id="@+id/profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="John Doe"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/profile_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="john@example.com"
                    android:textSize="14sp"

                    android:textColor="#888888" />
            </LinearLayout>

            <!-- Liked Restaurants Section -->
            <TextView
                android:id="@+id/liked_restaurants_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#2C2C2C"
                android:minHeight="48dp"
                android:onClick="toggleLikedRestaurants"
                android:padding="8dp"
                android:text="Liked Restaurants"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/liked_restaurants_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:textColor="#FFFFFF"
                android:padding="8dp">
                <!-- Dynamically populate liked restaurants -->
            </LinearLayout>

            <!-- Reviews Section -->
            <TextView
                android:id="@+id/reviews_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#2C2C2C"
                android:minHeight="48dp"
                android:onClick="toggleReviews"
                android:padding="8dp"
                android:text="Reviews"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/reviews_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:padding="8dp">

                <!-- Dynamically populate reviews -->
            </LinearLayout>

            <!-- Logout Button -->
            <Button
                android:id="@+id/logout_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Logout"
                android:onClick="logout"
                tools:ignore="VisualLintButtonSize" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
